<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_test_android_event"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TestAndroidEventActivity">
    <com.android.event.view.DiyViewGroup
        android:id="@+id/red"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:layout_marginBottom="220dp"
        >
        <com.android.event.view.DiyViewGroup
            android:id="@+id/green"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:layout_margin="50dp"
            >
            <com.android.event.view.DiyView
                android:id="@+id/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="50dp"
                android:background="@color/white"
                />
        </com.android.event.view.DiyViewGroup>
    </com.android.event.view.DiyViewGroup>

    <LinearLayout
        android:id="@+id/up_inter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/red_intercept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="r_d_Inter"
            android:layout_margin="8dp"
            />
        <Button
            android:id="@+id/red_m_intercept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="r_m_Inter"
            android:layout_margin="8dp"
            />

        <Button
            android:id="@+id/red_u_intercept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="r_u_Inter"
            android:layout_margin="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/down_inter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/up_inter"
        android:layout_marginBottom="8dp"
        >
        <Button
            android:id="@+id/green_intercept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="g_d_Inter"
            android:layout_margin="8dp"
            />
        <Button
            android:id="@+id/green_m_intercept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="g_m_Inter"
            android:layout_margin="8dp"
            />
        <Button
            android:id="@+id/green_u_intercept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="g_u_Inter"
            android:layout_margin="8dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/down_inter"
        android:layout_marginBottom="8dp"
        >
        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="reset"/>

        <Button
            android:id="@+id/anr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="ANR"/>
        <Button
            android:id="@+id/green_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="green_request"
            android:layout_margin="8dp"
            />
    </LinearLayout>
</RelativeLayout>
